@using Amazon
@using Amazon.S3
@model TraniningMVC.Models.PreSignedRequest

@{
    ViewBag.Title = "Test";
}

<div class="conroller-urls">
    <div id="GeneratePreSignedUrl" data-request-url="@Url.Action("GeneratePreSignedUrl", "AwsBucket")"></div>
</div>

<h2>AWS S3 SDK test</h2>


@*@using (Html.BeginForm("Test", "AwsBucket", FormMethod.Post, new { enctype = "multipart/form-data" }))
{*@
<div class="form-horizontal">
    <h4>Pre-signed request</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.BucketRegionEnum, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10" id="bucket-region">
            @Html.DisplayFor(model => model.BucketRegionEnum, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.BucketRegionEnum, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.BucketName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10" id="bucket-name">
            @Html.DisplayFor(model => model.BucketName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.BucketName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ObjectKey, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10" id="object-key">
            @Html.DisplayFor(model => model.ObjectKey, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ObjectKey, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group file-upload">
        @Html.LabelFor(model => model.File, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.File, new { @type = "file", style = "width: 50%" })
            @Html.ValidationMessageFor(model => model.File, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="button" value=@Model.HttpRequestMethod class="btn btn-default" onclick="sendFileToTheBucket()" />
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/awsBucket/Test.js")
}
